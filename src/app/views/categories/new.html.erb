<div class="skill_registration_update_main_image"></div>
<h1 id="page_title">Category/Skill Registration</h1>

<div class="content">
  <%= form_for @category,url: categories_create_url, html: {class: ''} do |f| %>
    <div class="form-group">
      <%= f.label :"カテゴリーネーム" %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <input type="hidden" name="categoryid" value="<%= @category.id %>" />

    <%= fields_for @skill do |s| %>
      <%= f.label :"スキル項目" %><br/>
      <input type="text" class="form-control" name="skill1" value=""><br/>
      <input type="hidden" name="skillid1" value="1" />
    <% end %>

    <div class="form-group">
      <%= f.label :"カテゴリー用画像" %>
      <%= f.file_field :title_image %>
    </div>

    <div class="form-group">
      <%= f.label :"アイコン用画像" %>
      <%= f.file_field :icon_image %>
    </div>

    <div class="submit">
      <%= f.submit "登録", class: 'btn_skill_detail' %>
    </div>
  <% end %>
</div>
